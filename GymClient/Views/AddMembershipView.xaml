<Window
    x:Class="GymClient.Views.AddMembershipView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GymClient.Utils"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:GymClient.ViewModels"
    Width="300"
    Height="335"
    ResizeMode="NoResize"
    Style="{StaticResource MaterialDesignWindow}"
    WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:NoValidationErrorConverter x:Key="NoValidationErrorConverter" />
    </Window.Resources>

    <StackPanel Margin="20" VerticalAlignment="Top">
        <ComboBox
            x:Name="MembersBox"
            Margin="0,6,0,10"
            materialDesign:HintAssist.Hint="Клиент"
            DisplayMemberPath="FullNameWithPhone"
            IsHitTestVisible="{Binding IsMemberComboBoxEnabled}"
            ItemsSource="{Binding Members}"
            SelectedItem="{Binding SelectedMember, Mode=TwoWay}" />

        <TextBlock Margin="0,0,0,0" Text="Дата начала абонемента:" />
        <DatePicker
            x:Name="StartDate"
            Margin="0,6,0,10"
            materialDesign:HintAssist.Hint="Дата начала абонемента"
            PreviewTextInput="DatePicker_PreviewTextInput">
            <DatePicker.SelectedDate>
                <Binding
                    Mode="TwoWay"
                    Path="StartDateTime"
                    UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <local:RequiredRule />
                    </Binding.ValidationRules>
                </Binding>
            </DatePicker.SelectedDate>
        </DatePicker>

        <TextBlock Margin="0,0,0,0" Text="Дата окончания абонемента:" />
        <DatePicker
            x:Name="EndDate"
            Margin="0,6,0,10"
            materialDesign:HintAssist.Hint="Дата окончания абонемента"
            PreviewTextInput="DatePicker_PreviewTextInput">
            <DatePicker.SelectedDate>
                <Binding
                    Mode="TwoWay"
                    Path="EndDateTime"
                    UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <local:RequiredRule />
                    </Binding.ValidationRules>
                </Binding>
            </DatePicker.SelectedDate>
        </DatePicker>

        <CheckBox
            Margin="0,6,0,10"
            HorizontalAlignment="Left"
            Content="Оплата по карте"
            IsChecked="{Binding IsCardPayment, Mode=TwoWay}"
            IsEnabled="{Binding IsCardPaymentEnabled}" />

        <StackPanel
            Margin="0,10,0,0"
            HorizontalAlignment="Right"
            IsEnabled="{Binding CanSave}"
            Orientation="Horizontal">
            <Button
                Click="SaveBtn_Click"
                Content="Сохранить"
                ToolTip="Сохранить">
                <Button.Style>
                    <Style BasedOn="{StaticResource MaterialDesignRaisedButton}" TargetType="Button">
                        <Setter Property="Command" Value="{Binding AddMembershipCommand}" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                <Setter Property="Command" Value="{Binding EditMembership}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.IsEnabled>
                    <MultiBinding Converter="{StaticResource NoValidationErrorConverter}">
                        <Binding ElementName="StartDate" Path="(Validation.HasError)" />
                        <Binding ElementName="EndDate" Path="(Validation.HasError)" />
                    </MultiBinding>
                </Button.IsEnabled>
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
