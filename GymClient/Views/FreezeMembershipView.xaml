<Window
    x:Class="GymClient.Views.FreezeMembershipView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Width="300"
    Height="250"
    ResizeMode="NoResize"
    Style="{StaticResource MaterialDesignWindow}"
    WindowStartupLocation="CenterOwner">

    <StackPanel Margin="20" VerticalAlignment="Top">
        <TextBlock Text="Дата начала заморозки:" />
        <DatePicker PreviewTextInput="DatePicker_PreviewTextInput" SelectedDate="{Binding FreezeStartDateTime}" />

        <TextBlock Margin="0,10,0,0" Text="Дата конца заморозки:" />
        <DatePicker PreviewTextInput="DatePicker_PreviewTextInput" SelectedDate="{Binding FreezeEndDateTime}" />
        <StackPanel
            Margin="0,30,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="110"
                Margin="0,0,10,0"
                Click="SaveBtn_Click"
                Content="Сохранить" />
        </StackPanel>
    </StackPanel>
</Window>
