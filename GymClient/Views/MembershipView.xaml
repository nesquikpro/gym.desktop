<UserControl
    x:Class="GymClient.Views.MembershipView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:GymClient.Utils"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GymClient.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <UserControl.Resources>
        <converters:UtcToLocalConverter x:Key="UtcToLocalConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:BoolToYesNoConverter x:Key="BoolToYesNoConverter" />
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Search  -->
            <TextBox
                Grid.Column="0"
                VerticalContentAlignment="Center"
                materialDesign:HintAssist.Hint="Поиск"
                materialDesign:TextFieldAssist.HasClearButton="True"
                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Add  -->
            <Button
                Grid.Column="2"
                Margin="16,0,8,0"
                Padding="16,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                materialDesign:ButtonAssist.CornerRadius="20"
                Command="{Binding OpenAddMemberViewCommand}"
                ToolTip="Добавить абонемент">
                <materialDesign:PackIcon Kind="Add" />
            </Button>

        </Grid>

        <!--  DataGrid  -->
        <DataGrid
            Grid.Row="1"
            Margin="5,5,5,5"
            AutoGenerateColumns="False"
            Background="{DynamicResource MaterialDesignPaper}"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserReorderColumns="False"
            CanUserResizeRows="False"
            CanUserSortColumns="True"
            Foreground="{DynamicResource MaterialDesignBody}"
            IsReadOnly="True"
            ItemsSource="{Binding MembershipSource}"
            SelectedItem="{Binding SelectedMembership, Mode=TwoWay}"
            SelectionMode="Single"
            SelectionUnit="FullRow"
            Visibility="{Binding HasData, Converter={StaticResource BoolToVisibilityConverter}}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="auto"
                    Binding="{Binding Id}"
                    Header="ID" />

                <DataGridTextColumn
                    Width="auto"
                    Binding="{Binding MemberFullName}"
                    Header="Клиент" />

                <DataGridTextColumn
                    Width="auto"
                    Binding="{Binding StartDate, StringFormat={}{0:dd.MM.yyyy}}"
                    Header="Начало абонемента"
                    SortMemberPath="StartDateTime" />

                <DataGridTextColumn
                    Width="auto"
                    Binding="{Binding EndDate, StringFormat={}{0:dd.MM.yyyy}}"
                    Header="Конец абонемента"
                    SortMemberPath="EndDateTime" />

                <DataGridTextColumn
                    Width="auto"
                    Binding="{Binding IsFrozen, Converter={StaticResource BoolToYesNoConverter}}"
                    Header="Заморожен" />

                <DataGridTextColumn
                    Width="auto"
                    Binding="{Binding FreezePeriod}"
                    Header="Период заморозки" />

                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <Button
                                    Command="{Binding DataContext.OpenFreezeDialogCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    ToolTip="Приостановить">
                                    <materialDesign:PackIcon Kind="Pause" />
                                </Button>
                                <Button
                                    Command="{Binding DataContext.UnfreezeCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    ToolTip="Активировать">
                                    <materialDesign:PackIcon Kind="Play" />
                                </Button>
                                <Button
                                    Command="{Binding DataContext.DeleteMembershipCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    ToolTip="Удалить">
                                    <materialDesign:PackIcon Kind="Delete" />
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

            <DataGrid.RowStyle>
                <Style BasedOn="{StaticResource MaterialDesignDataGridRow}" TargetType="DataGridRow">
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridRow">
                                <Grid>
                                    <Border
                                        x:Name="FrozenHighlight"
                                        Background="SkyBlue"
                                        Opacity="0" />
                                    <DataGridCellsPresenter />
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsFrozen}" Value="True">
                                        <Setter TargetName="FrozenHighlight" Property="Opacity" Value="0.2" />
                                    </DataTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.CellStyle>
                <Style BasedOn="{StaticResource MaterialDesignDataGridCell}" TargetType="DataGridCell">
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                </Style>
            </DataGrid.CellStyle>
        </DataGrid>

        <!--  No data  -->
        <TextBlock
            Grid.RowSpan="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="66"
            FontWeight="SemiBold"
            Foreground="Gray"
            Text="Нет данных"
            Visibility="{Binding HasData, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}" />
    </Grid>
</UserControl>
