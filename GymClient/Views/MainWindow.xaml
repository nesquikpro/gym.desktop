<Window
    x:Class="GymClient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:GymClient.Utils"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GymClient.Services"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Gym"
    Width="1280"
    Height="720"
    Background="{DynamicResource MaterialDesignPaper}"
    Style="{StaticResource MaterialDesignWindow}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <materialDesign:DialogHost x:Name="DialogHost">
        <Grid>
            <!--  Main Content  -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Sidebar  -->
                    <Grid
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        Background="{DynamicResource MaterialDesignDarkSeparatorBackground}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Logo / App Title  -->
                        <StackPanel
                            Margin="0,24,0,16"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <materialDesign:PackIcon
                                Width="40"
                                Height="40"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="#03A9F4"
                                Kind="HumanRunFast" />
                        </StackPanel>
                        <Border Grid.Row="1" Height="16" />

                        <!--  Navigation  -->
                        <Button
                            x:Name="btnMembers"
                            Grid.Row="2"
                            Height="60"
                            Margin="16,0,16,8"
                            Click="OpenMembers_Command"
                            Command="{Binding OpenMembersCommand}"
                            Style="{StaticResource MaterialDesignFlatDarkButton}"
                            ToolTip="Пользователи">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <materialDesign:PackIcon
                                    Grid.Row="0"
                                    Width="24"
                                    Height="24"
                                    HorizontalAlignment="Center"
                                    Kind="AccountGroup" />
                                <TextBlock
                                    Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="Клиенты" />
                            </Grid>
                        </Button>
                        <Button
                            x:Name="btnMembership"
                            Grid.Row="3"
                            Height="60"
                            Margin="16,0,16,8"
                            Click="OpenMemberships_Command"
                            Command="{Binding OpenMembershipsCommand}"
                            Style="{StaticResource MaterialDesignFlatDarkButton}"
                            ToolTip="Абонементы">
                            <StackPanel Orientation="Vertical">
                                <materialDesign:PackIcon
                                    Width="24"
                                    Height="24"
                                    HorizontalAlignment="Center"
                                    Kind="CardAccountDetails" />
                                <TextBlock HorizontalAlignment="Center" Text="Абонементы" />
                            </StackPanel>
                        </Button>
                        <Button
                            x:Name="btnChip"
                            Grid.Row="4"
                            Height="60"
                            Margin="16,0,16,8"
                            Click="OpenChips_Command"
                            Command="{Binding OpenChipsCommand}"
                            Style="{StaticResource MaterialDesignFlatDarkButton}"
                            ToolTip="Чипы доступа">
                            <StackPanel Orientation="Vertical">
                                <materialDesign:PackIcon
                                    Width="24"
                                    Height="24"
                                    HorizontalAlignment="Center"
                                    Kind="IntegratedCircuitChip" />
                                <TextBlock HorizontalAlignment="Center" Text="Чипы доступа" />
                            </StackPanel>
                        </Button>
                        <Button
                            x:Name="btnVisit"
                            Grid.Row="5"
                            Height="60"
                            Margin="16,0,16,8"
                            Click="OpenVisits_Command"
                            Command="{Binding OpenVisitsCommand}"
                            Style="{StaticResource MaterialDesignFlatDarkButton}"
                            ToolTip="Визиты клиентов">
                            <StackPanel>
                                <materialDesign:PackIcon
                                    Width="24"
                                    Height="24"
                                    HorizontalAlignment="Center"
                                    Kind="FileClock" />
                                <TextBlock HorizontalAlignment="Center" Text="Визиты" />
                            </StackPanel>
                        </Button>

                        <StackPanel Grid.Row="7" Orientation="Vertical">
                            <!--  Exit  -->
                            <StackPanel
                                Margin="0,5,0,50"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    Kind="WhiteBalanceSunny" />
                                <ToggleButton
                                    x:Name="ThemeToggleButton"
                                    Checked="ThemeToggleButton_Checked"
                                    IsChecked="False"
                                    Style="{StaticResource MaterialDesignSwitchDarkToggleButton}"
                                    Unchecked="ThemeToggleButton_Unchecked" />
                                <materialDesign:PackIcon
                                    Width="20"
                                    Height="20"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Kind="MoonAndStars" />
                            </StackPanel>
                            <Button
                                Width="40"
                                Height="40"
                                Margin="16,0,16,16"
                                Command="{Binding LogoutCommand}"
                                Style="{StaticResource MaterialDesignFloatingActionDarkButton}"
                                ToolTip="Выйти из системы">
                                <materialDesign:PackIcon
                                    Width="24"
                                    Height="24"
                                    Kind="logout" />
                            </Button>
                        </StackPanel>

                    </Grid>

                    <!--  Main Content  -->
                    <ContentControl x:Name="MainContent" Grid.Column="1">
                        <StackPanel>
                            <materialDesign:Card
                                Width="500"
                                Margin="250"
                                Padding="32"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,12"
                                        FontWeight="Bold"
                                        Foreground="{DynamicResource MaterialDesignBody}"
                                        Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                        Text="Добро пожаловать!"
                                        TextAlignment="Center" />
                                    <TextBlock
                                        Foreground="{DynamicResource MaterialDesignBody}"
                                        Style="{StaticResource MaterialDesignBody1TextBlock}"
                                        Text="Ваша современная система управления спортзалом."
                                        TextAlignment="Center" />
                                </StackPanel>
                            </materialDesign:Card>
                        </StackPanel>
                    </ContentControl>
                </Grid>

                <!--  Status Bar  -->
                <StatusBar
                    Grid.Row="1"
                    Height="28"
                    Background="{DynamicResource MaterialDesignCardBackground}"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="0,1,0,0">
                    <StatusBar.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                            </Grid>
                        </ItemsPanelTemplate>
                    </StatusBar.ItemsPanel>

                    <!--  Username  -->
                    <StatusBarItem Grid.Column="0" VerticalAlignment="Center">
                        <StackPanel Margin="16,0,0,0" Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="14"
                                Height="14"
                                Margin="0,0,4,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource MaterialDesignBodyLight}"
                                Kind="Account" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="12"
                                FontWeight="Bold"
                                Foreground="{DynamicResource MaterialDesignBodyLight}"
                                Text="{Binding CurrentUsername, FallbackValue='Не авторизован'}" />
                        </StackPanel>
                    </StatusBarItem>

                    <!--  Records Count  -->
                    <StatusBarItem Grid.Column="1" VerticalAlignment="Center">
                        <StackPanel Margin="16,0,0,0" Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="14"
                                Height="14"
                                Margin="0,0,4,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource MaterialDesignBodyLight}"
                                Kind="Counter" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="12"
                                FontWeight="Bold"
                                Foreground="{DynamicResource MaterialDesignBodyLight}"
                                Text="{Binding RecordsSummary, FallbackValue='Клиенты: 150 | Абонементы: 100 | Активные Чипы: 100'}" />
                        </StackPanel>
                    </StatusBarItem>

                    <!--  Current Time  -->
                    <StatusBarItem Grid.Column="2" VerticalAlignment="Center">
                        <StackPanel Margin="16,0,8,0" Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="14"
                                Height="14"
                                Margin="0,0,4,0"
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                Foreground="{DynamicResource MaterialDesignBodyLight}"
                                Kind="Clock" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="12"
                                Foreground="{DynamicResource MaterialDesignBodyLight}"
                                Text="{Binding CurrentTime, StringFormat='HH:mm'}" />
                        </StackPanel>
                    </StatusBarItem>
                </StatusBar>
            </Grid>

            <!--  Loading Overlay  -->
            <Grid
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="#80000000"
                IsHitTestVisible="True"
                Visibility="{Binding Source={x:Static local:LoadingBarService.Instance}, Path=IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                <ProgressBar
                    Width="100"
                    Height="6"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="#03A9F4"
                    IsIndeterminate="True"
                    Style="{StaticResource MaterialDesignCircularProgressBar}"
                    Value="0" />
            </Grid>
        </Grid>
    </materialDesign:DialogHost>
</Window>
