<UserControl
    x:Class="GymClient.Views.VisitView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:GymClient.Utils"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converter:UtcToLocalConverter x:Key="UtcToLocalConverter" />
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <!--  FILTER PANEL  -->
        <Border
            Margin="0,0,0,12"
            Padding="12"
            Background="{DynamicResource MaterialDesignPaper}"
            CornerRadius="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="140" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Search  -->
                <TextBox
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Hint="Поиск"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                <!--  Period  -->
                <ComboBox
                    x:Name="SelectedPeriodComboBox"
                    Grid.Column="1"
                    Margin="12,0,0,0"
                    materialDesign:HintAssist.Hint="Период"
                    SelectedValue="{Binding SelectedPeriodFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectedValuePath="Content">
                    <ComboBoxItem Content="Все" />
                    <ComboBoxItem Content="Сегодня" />
                    <ComboBoxItem Content="Месяц" />
                    <ComboBoxItem Content="Год" />
                </ComboBox>

                <StackPanel
                    Grid.Column="3"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">

                    <DatePicker
                        x:Name="StartDatePicker"
                        Width="150"
                        Margin="12,0"
                        materialDesign:HintAssist.Hint="Начало"
                        PreviewTextInput="DatePicker_PreviewTextInput"
                        SelectedDate="{Binding StartDate}" />

                    <Button
                        Margin="12,0,0,0"
                        Command="{Binding ApplyFiltersCommand}"
                        ToolTip="Поиск">
                        <materialDesign:PackIcon Kind="Magnify" />
                    </Button>

                    <DatePicker
                        x:Name="EndDatePicker"
                        Width="150"
                        Margin="12,0"
                        materialDesign:HintAssist.Hint="Конец"
                        PreviewTextInput="DatePicker_PreviewTextInput"
                        SelectedDate="{Binding EndDate}" />

                    <Button
                        Grid.Column="4"
                        Margin="12,0,0,0"
                        Command="{Binding ExportToPdfCommand}"
                        ToolTip="Экспортировать в PDF">
                        <materialDesign:PackIcon Kind="FilePdfBox" />
                    </Button>

                    <Button
                        Grid.Column="5"
                        Margin="12,0,0,0"
                        Command="{Binding ExportToExcelCommand}"
                        ToolTip="Экспортировать в Excel">
                        <materialDesign:PackIcon Kind="MicrosoftExcel" />
                    </Button>
                </StackPanel>

                <!--  Add  -->
                <Button
                    Grid.Column="6"
                    Margin="12,0,0,0"
                    materialDesign:ButtonAssist.CornerRadius="20"
                    Command="{Binding OpenVisitViewCommand}"
                    ToolTip="Добавить визит">
                    <materialDesign:PackIcon Kind="AccountMultiplePlus" />
                </Button>
            </Grid>
        </Border>
        <!--  TABLE + No data text  -->
        <Grid Grid.Row="1">
            <DataGrid
                AutoGenerateColumns="False"
                Background="{DynamicResource MaterialDesignPaper}"
                BorderThickness="0"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                CanUserReorderColumns="False"
                CanUserResizeRows="True"
                CanUserSortColumns="True"
                Foreground="{DynamicResource MaterialDesignBody}"
                IsReadOnly="True"
                ItemsSource="{Binding FilteredVisits}"
                SelectedItem="{Binding SelectedVisit}"
                SelectionMode="Single"
                SelectionUnit="FullRow"
                Visibility="{Binding HasData, Converter={StaticResource BoolToVisibilityConverter}}">

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Id}"
                        Header="ID" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding MemberFullName}"
                        Header="ФИО" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding ChipNumber}"
                        Header="Чип" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding VisitDateTime, Converter={StaticResource UtcToLocalConverter}, StringFormat={}{0:dd.MM.yyyy HH:mm}}"
                        Header="Дата" />
                    <DataGridTemplateColumn Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Button
                                        Command="{Binding DataContext.DeleteVisitCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        ToolTip="Удалить">
                                        <materialDesign:PackIcon Kind="Delete" />
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

                <DataGrid.CellStyle>
                    <Style BasedOn="{StaticResource MaterialDesignDataGridCell}" TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                    </Style>
                </DataGrid.CellStyle>
            </DataGrid>
        </Grid>
        <!--  CHART  -->
        <Border
            Grid.Row="2"
            Padding="12"
            Background="{DynamicResource MaterialDesignPaper}"
            CornerRadius="8"
            Visibility="{Binding HasData, Converter={StaticResource BoolToVisibilityConverter}}">
            <lvc:CartesianChart
                x:Name="VisitsChart"
                Background="{DynamicResource MaterialDesignPaper}"
                LegendPosition="Right"
                LegendTextPaint="{Binding LegendTextPaint}"
                Series="{Binding ChartSeries}"
                Unloaded="CartesianChart_Unloaded"
                XAxes="{Binding ChartXAxes}"
                YAxes="{Binding ChartYAxes}" />
        </Border>
        <!--  No data  -->
        <TextBlock
            Grid.RowSpan="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="66"
            FontWeight="SemiBold"
            Foreground="Gray"
            Text="Нет данных"
            Visibility="{Binding HasData, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}" />
    </Grid>
</UserControl>
